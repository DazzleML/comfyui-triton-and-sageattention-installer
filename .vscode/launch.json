{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Install (Normal)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/comfyui_triton_sageattention.py",
            "args": ["--install"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Install (Verbose)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/comfyui_triton_sageattention.py",
            "args": ["--install", "--verbose"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Install (Custom Path)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/comfyui_triton_sageattention.py",
            "args": ["--install", "--base-path", "${input:comfyuiPath}"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Cleanup",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/comfyui_triton_sageattention.py",
            "args": ["--cleanup"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Show Help",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/comfyui_triton_sageattention.py",
            "args": ["--help"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Show Version",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/comfyui_triton_sageattention.py",
            "args": ["--version"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "comfyuiPath",
            "type": "promptString",
            "description": "Enter the path to your ComfyUI installation",
            "default": "C:\\ComfyUI_windows_portable"
        }
    ]
}